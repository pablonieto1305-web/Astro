---
// SSG (static) --> no necesito un servidor
// CSR (client) --> no necesito un servidor
// SSR (server) --> necesito un servidor que sepa ejecutar nodeJS
import MiLayout from "../../layouts/MiLayout.astro";

const { id } = Astro.params;
const response = await fetch(
  `https://jsonplaceholder.typicode.com/users/${id}`
);
const user = await response.json();
interface User {
  name: String;
  email: String;
  username: String;
  address: Address;
}

interface Address {
  street: String;
}
---

<MiLayout>
  <h1>Datos del usuario</h1>
  <p>Nombre: {user.name}</p>
  <p>Email: {user.email}</p>
  <p>Username: {user.username}</p>
  <p>Direcci√≥n: {user.address?.street}</p>
</MiLayout>